{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Db_Connection": "Data Source=(localdb)\\MSSQLLocalDB;Database=AllureStoreDB;Integrated Security=True;Trusted_Connection=true;MultipleActiveResultSets=true;"
  },
  "Jwt": {
    "key": "This is custom security key for application AllureStore",
    "Issuer": "https://localhost:7103",
    "Audience": "AllureApp.API"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Users\\91982\\source\\repos\\AllureAppAPI\\AllureAppLogs",
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 52428800
        }
      }
    ]

  }
}

